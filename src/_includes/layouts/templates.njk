{% extends "./base.njk" %}
{% block content %}
<div id="main-content" class="main-content">
	<main class="main-primary" id="main">
		<div class="container p-b-lg p-t-md">
  {# Breadcrumbs (rendering data from /src/_data/breadcrumbs.json and /src/_data/helpers.js  #}
    {% include "../breadcrumbs.njk" %}


			<div class="row">
				<div class="col-md-3">

     {# SIde navigation (rendering data from /src/_data/templates.json  and /src/_data/helpers.js  #}
					<nav aria-labelledby="components-list" class="side-navigation sticky-6">
		   {# Links with subnav #}

<ul class="list-navigation">
  <li><a href="/sample/content-patterns.html" class="nav-heading" id="components-list">Content Patterns</a>
  <ul>
  				{% for item in templates.templates %}
      {% if 'subnav' in item %}
        <li><a href="{{ item.url }}" {{ helpers.getLinkActiveState(item.url, page.url) | safe }}>{{ item.text }}</a>
         {# subnav #}
         {% if helpers.getURL(item.url, page.url) %} 
           <ul>
            {% for subitem in item.subnav %}
            <li>
             <a href="{{ subitem.url }}" data-hash="{{ subitem.dataHash }}" class="tab-link">{{ subitem.text }}</a>
            </li>
            {% endfor %}
           </ul>
           {% endif %}
        </li>
       {% else %}
          <li><a href="{{ item.url }}" {{ helpers.getLinkActiveState(item.url, page.url) | safe }}>{{ item.text }}</a></li>
       {% endif %}
      {% endfor %}
      </ul>
  </li>
  </ul>
  </nav>


				</div>
				<div class="col-md-9">
					{{ content | safe }}
				</div>
			</div>
		</div>
	</main>
</div>
{% endblock %}